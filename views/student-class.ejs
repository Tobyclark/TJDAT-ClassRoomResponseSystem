<!DOCTYPE html>           

<html>    

  <script>
    const questions = '<%= questions %>'
  </script>  

  <head>  
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500&display=swap" rel="stylesheet">
    <link href= "/public/css/main.css" rel="stylesheet" type="text/css" />               
    <title>Quiz Subpage</title> 
    
  </head>


  <body>                
    
    
    <!-- <p>welcome to da quiz! Please answer the following questions: </p>  -->
    
    <form action="/answer-question" method="POST">
                     
      <div class = "form__input">
        <h1> <%= classID %> Quiz </h1>  
        
        <% questions.forEach(function(item) { %>
          <% if(item !== ',') { %>

        
            <p> <%= item.question %> </p>   
                
            <label> Ans 1: <%=item.answers[0] %> </label> <br>
            <label> Ans 2: <%=item.answers[1] %></label>  <br>
            <label> Ans 3: <%=item.answers[2] %></label> <br>
            <label> Ans 4: <%=item.answers[3] %></label> <br>

            <form>
              <br>
              <input type="radio" id="option1" name="<%=item.question%>" value="1">
              <label for="option1">Option 1</label> 
              <br>
              <input type="radio" id="option2" name="<%=item.question%>" value="2">
              <label for="option2">Option 2</label> 
              <br>
              <input type="radio" id="option3" name="<%=item.question%>" value="3">
              <label for="option3">Option 3</label> 
              <br>
              <input type="radio" id="option4" name="<%=item.question%>" value="4">
              <label for="option4">Option 4</label> 
              <br>
              <hr>
            
            </form>
            
          <% } %>

        <% }) %>

        <input type="hidden" name="classID" value="<%= classID %>">
        <button class="form__button" type="submit"> Submit  </button>
    </div>
      
    </form>              
    
  </body>    
  
</html>